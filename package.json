{
  "name": "i18n-manager",
  "version": "1.1.0",
  "main": "build/main/index.js",
  "license": "MIT",
  "description": "The app that will help to manage your app translations",
  "author": {
    "email": "gilmarsquinelato@gmail.com",
    "name": "Gilmar Quinelato",
    "url": "https://www.github.com/gilmarsquinelato"
  },
  "module": "commonjs",
  "scripts": {
    "start": "yarn clean && concurrently \"yarn watch-main\" \"BROWSER=none yarn start-web\" \"wait-on http://localhost:1234 && electron --inspect=9229 --remote-debugging-port=9222 .\"",
    "build": "yarn build-all && electron-builder -wml",
    "test:watch": "jest --watch",
    "test": "jest --ci --coverage --maxWorkers=2 && cat ./coverage/lcov.info | codacy-coverage --language typescript",
    "start-web": "parcel ./renderer/index.html -d build/view",
    "build-web": "parcel build ./renderer/index.html -d build/view --public-url '.'",
    "build-main": "tsc --outDir ./build -d -p ./main",
    "watch-main": "tsc --outDir ./build -w -p ./main",
    "build-all": "yarn clean && concurrently \"yarn build-main\" \"yarn build-web\"",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf build dist"
  },
  "devDependencies": {
    "@sentry/cli": "^1.35.1",
    "codacy-coverage": "^3.0.0",
    "concurrently": "^4.0.0",
    "cross-env": "^5.2.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.28.2",
    "electron-devtools-installer": "^2.2.4",
    "electron-download": "^4.1.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.4.0",
    "immutable-devtools": "^0.1.3",
    "jest": "^23.5.0",
    "parcel-bundler": "^1.9.7",
    "redux-saga-test-plan": "^3.7.0",
    "rimraf": "^2.6.2",
    "ts-jest": "23.10.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "typescript": "^3.0.1",
    "typescript-styled-plugin": "^0.11.0",
    "wait-on": "^3.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.3.1",
    "@sentry/electron": "^0.11.0",
    "@types/axios": "^0.14.0",
    "@types/color": "^3.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.1",
    "@types/json-schema": "^7.0.1",
    "@types/lodash": "^4.14.116",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/react-jsonschema-form": "^1.0.8",
    "@types/react-redux": "^6.0.6",
    "@types/react-router-dom": "^4.3.0",
    "@types/redux-actions": "^2.3.0",
    "@types/redux-immutable": "^3.0.38",
    "@types/semver": "^5.5.0",
    "axios": "^0.18.0",
    "bootstrap": "4.1.3",
    "color": "^3.0.0",
    "connected-react-router": "^4.4.1",
    "electron-is-dev": "^1.0.0",
    "electron-updater": "^3.1.2",
    "emotion": "^9.2.6",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "popper.js": "^1.14.4",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-emotion": "^9.2.6",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.3.5",
    "react-jsonschema-form": "^1.0.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-actions": "^2.6.1",
    "redux-devtools-extension": "^2.13.5",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.16.0"
  },
  "alias": {
    "~": "./renderer"
  },
  "build": {
    "productName": "i18n Manager",
    "appId": "com.i18n-manager.app",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "icons/**/*",
      "package.json"
    ],
    "icon": "./icons/icon.png",
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Folder",
            "CFBundleTypeOSTypes": [
              "fold"
            ],
            "CFBundleTypeRole": "Editor",
            "LSIsAppleDefaultForType": true
          }
        ]
      }
    },
    "linux": {
      "publish": [
        "github"
      ],
      "category": "Development"
    },
    "win": {
      "publish": [
        "github"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "projects": [
      "./main",
      "./renderer",
      "./common"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js}",
      "!**/*.d.ts",
      "!**/assets/*",
      "!**/jest.setup.ts",
      "!**/jest.config.js"
    ]
  }
}
